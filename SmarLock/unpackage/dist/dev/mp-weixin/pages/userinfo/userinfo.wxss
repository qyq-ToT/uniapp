  width: 100%;
  height: 35rpx;
  text-indent: 1em;
  color: #00FFFF;
  font-size: 38rpx;
  font-weight: 700;
}
.userinfo .top .infos view:nth-child(2) {
  font-size: 32rpx;
  font-weight: 400;
  color: #80FFFF;
  text-indent: 0.5em;
}
