          align-items: center;
  height: 340rpx;
  width: 100%;
  position: relative;
}
.integralRow .head image {
  width: 200rpx;
  height: 180rpx;
}
.integralRow .head view {
  position: absolute;
  top: 115rpx;
  text-indent: 0.5em;
  color: #FFFFFF;
  font-size: 36rpx;
  font-weight: 500;
  width: 100rpx;
  height: 20rpx;
}
.integralRow .explain .title {
  text-indent: 1em;
  font-size: 48rpx;
  font-weight: 700;
  color: #272727;
  padding: 30rpx 0;
}
.integralRow .explain .info {
  text-indent: 1em;
  color: #8E8E8E;
  font-size: 36rpx;
  font-weight: 500;
}
.integralRow .content {
  margin-top: 40rpx;
}
.integralRow .content .title {
  text-indent: 1em;
  font-size: 48rpx;
  font-weight: 700;
  color: #272727;
  padding: 30rpx 0;
}
.integralRow .content .content-item {
  margin-top: 24rpx;
  color: #8E8E8E;
  border-bottom: 1rpx solid #8E8E8E;
}
.integralRow .content .content-item .top {
